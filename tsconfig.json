{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "alwaysStrict": false,
    "sourceMap": true,

    "allowUnusedLabels": true,
    "resolveJsonModule": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,

    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "assets" ]
}